<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/female"
        android:id="@+id/albumIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_alignTop="@id/albumIcon"
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album name"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toRightOf="@id/albumIcon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/albumTitle"
        android:layout_below="@id/albumTitle"
        android:textSize="12dp"
        android:text="Description"
        android:id="@+id/albumDescription"
        />

    <TextView
        android:layout_alignBottom="@id/albumIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/albumTitle"
        android:layout_below="@id/albumDescription"
        android:text="Owner"
        android:id="@+id/albumOwner"
        android:textSize="12dp"
        android:gravity="bottom"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/timeTag"
        android:layout_alignParentRight="true"
        android:text="05:44"
        android:layout_alignBottom="@id/albumTitle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTag"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/exploreAlbum"
        android:layout_alignBottom="@id/albumOwner"
        />


</RelativeLayout>